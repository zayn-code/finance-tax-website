{
  "version": 2,
  "name": "finance-tax-website",
  "builds": [
    {
      "src": "next.config.ts",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/api/sitemap"
    },
    {
      "src": "/robots.txt", 
      "dest": "/api/robots"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SITE_NAME": "智慧财税",
    "NODE_ENV": "production"
  },
  "functions": {
    "src/app/**/*.{js,ts,tsx}": {
      "maxDuration": 10
    }
  }
}